---
import CountdownTimer from './CountdownTimer.tsx'; // Adjust the path if necessary

// Define props
const { eventDate, subTitle, title } = Astro.props;
---
<section class="relative mx-auto max-w-[85rem] px-4 pb-24 pt-10 sm:px-6 lg:px-8 text-center">
  <div class="mx-auto mt-5 max-w-xl relative h-32">
    <h2 class="borderEffect absolute inset-6 text-neutral-400 dark:text-neutral-600 text-4xl font-bold leading-tight tracking-tight">
      {title}
    </h2>
    <h2 class="heroTitle absolute inset-6 text-4xl font-bold leading-tight tracking-tight">
      {title}
    </h2>
  </div>
  <div class="mx-auto mt-5 max-w-xl">
    <p class="text-lg text-neutral-600 dark:text-neutral-400">
      {subTitle}
    </p>
    <CountdownTimer eventDate={eventDate} client:idle />
  </div>
</section>

<style>
/* Base styles for desktop */
.heroTitle {
  font-size: 7vmin;
  color: #eb0028;
  animation: wave 3s ease-in-out infinite;
  z-index: 2;
  position: absolute;
}

.borderEffect {
  font-size: 7vmin;
  z-index: 1;
  position: absolute;
}

@keyframes wave {
  0%, 100% {
    clip-path: polygon(0% 47%, 10% 48%, 33% 54%, 54% 60%, 70% 61%, 84% 59%, 100% 52%, 100% 100%, 0% 100%);
  }

  50% {
    clip-path: polygon(0% 60%, 15% 65%, 34% 66%, 51% 62%, 67% 50%, 84% 45%, 100% 46%, 100% 100%, 0% 100%);
  }
}

/* Mobile view adjustments */
@media (max-width: 768px) {
  .heroTitle, .borderEffect {
    font-size:  11vmin;
  }

  @keyframes wave {
    0%, 100% {
      clip-path: polygon(0% 32%, 10% 35%, 33% 42%, 54% 48%, 70% 54%, 84% 51%, 100% 45%, 100% 100%, 0% 100%);
    }

    50% {
      clip-path: polygon(0% 22%, 15% 28%, 34% 35%, 51% 30%, 67% 20%, 84% 15%, 100% 20%, 100% 100%, 0% 100%);
    }
  }
}
</style>
