---
interface Props {
  sponsor: any;
}

const { sponsor } = Astro.props;
---

<div id={`modal-${sponsor.id}`} class="hidden fixed inset-0 z-50 bg-black/60 backdrop-blur-sm flex items-center justify-center p-4">
  <div class="bg-white dark:bg-neutral-900 rounded-xl shadow-2xl max-w-2xl w-full p-8 relative">

    <button onclick={`closeModal('${sponsor.id}')`} 
      class="absolute top-3 right-3 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 text-xl">
      âœ•
    </button>

    <div class="flex flex-col items-center text-center space-y-4">
      <img src={sponsor.img.src} class="h-32 object-contain" />

      <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100">{sponsor.name}</h3>

      <p class="text-sm text-gray-500 dark:text-gray-400">{sponsor.type}</p>

      <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
        {sponsor.longDescription}
      </p>

      <a href={sponsor.url} target="_blank" class="mt-4 px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700">
        Visit Website
      </a>
    </div>

  </div>
</div>
