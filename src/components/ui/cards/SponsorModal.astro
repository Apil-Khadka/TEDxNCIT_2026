---
interface Props {
  sponsor: any
  tier: 'gold' | 'silver' | 'bronze' | 'community'
}

const { sponsor, tier } = Astro.props

// Tier-based styling with proper light/dark mode colors
const tierModalStyles = {
  gold: {
    border: 'border-yellow-400 dark:border-yellow-500',
    borderHover: 'hover:border-yellow-500 dark:hover:border-yellow-400',
    badge: 'bg-gradient-to-r from-yellow-500 to-amber-600 text-white',
    button:
      'bg-gradient-to-r from-yellow-500 to-amber-600 hover:from-yellow-600 hover:to-amber-700 text-white shadow-lg hover:shadow-xl hover:shadow-yellow-500/50',
    accent: 'text-yellow-600 dark:text-yellow-400',
    titleGradient:
      'bg-gradient-to-r from-yellow-600 to-amber-600 bg-clip-text text-transparent dark:from-yellow-400 dark:to-amber-400',
    backdrop: 'bg-black/70',
    cardBg: 'bg-white dark:bg-neutral-900',
    glow: 'shadow-[0_0_100px_rgba(250,204,21,0.3)] dark:shadow-[0_0_120px_rgba(250,204,21,0.2)]',
  },
  silver: {
    border: 'border-slate-400 dark:border-slate-500',
    borderHover: 'hover:border-slate-500 dark:hover:border-slate-400',
    badge: 'bg-gradient-to-r from-slate-500 to-gray-600 text-white',
    button:
      'bg-gradient-to-r from-slate-500 to-gray-600 hover:from-slate-600 hover:to-gray-700 text-white shadow-lg hover:shadow-xl hover:shadow-slate-500/50',
    accent: 'text-slate-600 dark:text-slate-400',
    titleGradient:
      'bg-gradient-to-r from-slate-600 to-gray-700 bg-clip-text text-transparent dark:from-slate-300 dark:to-gray-300',
    backdrop: 'bg-black/70',
    cardBg: 'bg-white dark:bg-neutral-900',
    glow: 'shadow-[0_0_80px_rgba(148,163,184,0.25)] dark:shadow-[0_0_100px_rgba(148,163,184,0.2)]',
  },
  bronze: {
    border: 'border-orange-400 dark:border-orange-500',
    borderHover: 'hover:border-orange-500 dark:hover:border-orange-400',
    badge: 'bg-gradient-to-r from-orange-500 to-amber-600 text-white',
    button:
      'bg-gradient-to-r from-orange-500 to-amber-600 hover:from-orange-600 hover:to-amber-700 text-white shadow-lg hover:shadow-xl hover:shadow-orange-500/50',
    accent: 'text-orange-600 dark:text-orange-400',
    titleGradient:
      'bg-gradient-to-r from-orange-600 to-amber-700 bg-clip-text text-transparent dark:from-orange-400 dark:to-amber-400',
    backdrop: 'bg-black/70',
    cardBg: 'bg-white dark:bg-neutral-900',
    glow: 'shadow-[0_0_80px_rgba(251,146,60,0.25)] dark:shadow-[0_0_100px_rgba(251,146,60,0.2)]',
  },
  community: {
    border: 'border-violet-500 dark:border-violet-400',
    borderHover: 'hover:border-violet-600 dark:hover:border-violet-300',
    badge: 'bg-gradient-to-r from-violet-600 to-purple-700 text-white',
    button:
      'bg-gradient-to-r from-violet-600 to-purple-700 hover:from-violet-700 hover:to-purple-800 text-white shadow-lg hover:shadow-xl hover:shadow-violet-600/50',
    accent: 'text-violet-700 dark:text-violet-300',
    titleGradient:
      'bg-gradient-to-r from-violet-700 to-purple-700 bg-clip-text text-transparent dark:from-violet-300 dark:to-purple-300',
    backdrop: 'bg-black/70',
    cardBg: 'bg-white dark:bg-neutral-900',
    glow: 'shadow-[0_0_100px_rgba(139,92,246,0.3)] dark:shadow-[0_0_120px_rgba(139,92,246,0.2)]',
  },
}

const style = tierModalStyles[tier]
---

<!-- Fullscreen Modal Backdrop -->
<div
  id={`modal-${sponsor.id}`}
  class="animate-fadeIn fixed inset-0 z-[9999] flex hidden items-center justify-center p-4"
  onclick={`if(event.target === event.currentTarget) window.closeSponsorModal('${sponsor.id}')`}
>
  <!-- Backdrop with blur -->
  <div class={`absolute inset-0 ${style.backdrop} backdrop-blur-md`}></div>

  <!-- Modal Content -->
  <div
    class={`relative ${style.cardBg} rounded-2xl ${style.glow} max-w-3xl w-full transform transition-all duration-300 animate-slideUp border-2 ${style.border} overflow-hidden`}
  >
    <!-- Close Button -->
    <button
      onclick={`window.closeSponsorModal('${sponsor.id}')`}
      class="group absolute right-4 top-4 z-10 flex h-10 w-10 items-center justify-center rounded-full bg-gray-100 transition-all duration-200 hover:scale-110 hover:bg-gray-200 dark:bg-neutral-800 dark:hover:bg-neutral-700"
      aria-label="Close modal"
    >
      <svg
        class="h-5 w-5 text-gray-600 transition-colors group-hover:text-gray-900 dark:text-gray-400 dark:group-hover:text-gray-200"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <div class="p-8 md:p-10">
      {/* Header Section */}
      <div
        class="mb-6 flex flex-col items-center gap-6 md:flex-row md:items-start"
      >
        {/* Logo */}
        <div
          class="flex h-32 w-32 flex-shrink-0 items-center justify-center rounded-xl bg-gradient-to-br from-gray-50 to-gray-100 p-4 shadow-inner dark:from-neutral-800 dark:to-neutral-700"
        >
          <img
            src={sponsor.img.src}
            alt={sponsor.name}
            class="max-h-full max-w-full object-contain"
          />
        </div>

        {/* Title & Badge */}
        <div class="flex-grow text-center md:text-left">
          <div class="mb-3">
            <span
              class={`inline-block px-4 py-1.5 rounded-full text-xs font-bold uppercase tracking-wider ${style.badge} shadow-md`}
            >
              {sponsor.type}
            </span>
          </div>
          <h3
            class={`text-3xl md:text-4xl font-bold mb-2 ${style.titleGradient}`}
          >
            {sponsor.name}
          </h3>
          <p
            class={`text-sm uppercase tracking-wide font-semibold ${style.accent}`}
          >
            {tier} Sponsor
          </p>
        </div>
      </div>

      {/* Divider */}
      <div
        class={`h-px bg-gradient-to-r from-transparent via-gray-300 dark:via-neutral-700 to-transparent mb-6`}
      ></div>

      {/* Description */}
      <div class="mb-8">
        <p
          class="text-base leading-relaxed text-gray-700 dark:text-gray-300 md:text-lg"
        >
          {sponsor.longDescription}
        </p>
      </div>

      {/* Action Button */}
      <div class="flex justify-center md:justify-start">
        <a
          href={sponsor.url}
          target="_blank"
          rel="noopener noreferrer"
          class={`inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 transform hover:scale-105 ${style.button}`}
        >
          <span>Visit Website</span>
          <svg
            class="h-5 w-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      transform: translateY(30px) scale(0.95);
      opacity: 0;
    }
    to {
      transform: translateY(0) scale(1);
      opacity: 1;
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.2s ease-out;
  }

  .animate-slideUp {
    animation: slideUp 0.3s ease-out;
  }
</style>
