---
// Import the necessary components
import MainLayout from '@/layouts/MainLayout.astro'
import ContactSection from '@components/sections/misc/ContactSection.astro'
import { SITE } from '@data/constants'
import { CONTACT_SEO, OG } from '@data/constants'

const pageTitle: string = `Contact | ${SITE.title}`
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={CONTACT_SEO.title}
  description={CONTACT_SEO.description}
  structuredData={CONTACT_SEO.structuredData}
  meta={[
    // Adding Open Graph (OG) tags
    { property: 'og:title', content: CONTACT_SEO.title },
    { property: 'og:description', content: CONTACT_SEO.description },
    { property: 'og:type', content: 'website' },
    { property: 'og:url', content: `${SITE.url}contact` },
    { property: 'og:image', content: OG.image },
  ]}
>
  <ContactSection />
</MainLayout>
