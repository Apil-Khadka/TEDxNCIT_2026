const pageTitle = `Teams | TEDx`;
---

<MainLayout title={pageTitle}>
    <MainSection
      title="Meet the Team"
      subTitle="Discover the passionate individuals who bring TEDx events to life. From our core team to our advisors and volunteers, each member plays a vital role in making our events memorable."
      btnExists={true}
      btnTitle="Join Us"
      btnURL="#"
    />

  <TeamSection
    title="Core Team"
    description="Meet the dedicated individuals who form the core of TEDx, driving our events forward with creativity and passion."
    members={coreTeamMembers}
  />

  <TeamSection
    title="Advisors"
    description="Our advisors bring their experience and insight to help shape the vision and direction of TEDx events."
    members={advisors}
  />

  <TeamSection
    title="Volunteers"
    description="Our volunteers are the heart of TEDx events, bringing dedication and enthusiasm to ensure every event is a success."
    members={volunteers}
  />
</MainLayout>
