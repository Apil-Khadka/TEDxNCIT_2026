---
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import TeamSection from "@components/sections/team/TeamSection.astro";

import teamMember1 from "@images/blog/nischal.jpg";
